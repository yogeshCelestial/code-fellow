{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es6"
        ],
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "module": "Node16",
        "declaration": true,
        "declarationDir": "types",
    },
    "include": [
        "index.ts", "ai-prompt"],
    "exclude": [
        "node_modules"
    ]
}